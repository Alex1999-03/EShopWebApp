@model IEnumerable<EShopWebApp.Models.ProductCartViewModel>

@{
    ViewData["Title"] = "Cart";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <form asp-action="Delete" asp-controller="Cart" asp-route-id="@item.Id">
                       <input type="submit" value="Delete" class="btn btn-outline-danger"/>
                </form>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <th>Total</th>
            <td>@Model.Sum(x => x.Total)</td>
            <td></td>
        </tr>
    </tfoot>
</table>

<div class="row row-cols-2 justify-content-end my-2">
    <div class="col-auto">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Continue navigate</a>
    </div>
    <div class="col-auto">
        <a asp-action="Create" asp-controller="Checkout" class="btn btn-outline-success">Checkout</a>
    </div>
</div>
