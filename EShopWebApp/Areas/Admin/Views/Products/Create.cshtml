@model EShopWebApp.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />

<div class="col-md-10">
    <form class="row g-3 justify-content-center" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4 mb-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-8 mb-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-2">
            <label asp-for="Stock" class="control-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-2">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-2">
            <label asp-for="BrandId" class="control-label"></label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
        </div>
        <div class="col-md-3 mb-2">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
        </div>
        <div class="mb-4">
            <label asp-for="Images"></label>
            <input asp-for="Images" type="file" multiple class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Create" class="btn btn-outline-primary" />
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>

</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
